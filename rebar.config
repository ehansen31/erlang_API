{erl_opts, [debug_info]}.
{deps, [cowboy, meck, jiffy, pure_migrations, jwt, {uuid, ".*",
     {git, "https://github.com/avtobiff/erlang-uuid.git", "master"}}, poolboy]}.

{shell, [
  % {config, "config/sys.config"},
    {apps, [erlang_api]}
]}.

{relx, [{release, {erlang_api, "0.1.0"},
         [erlang_api,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.

{plugins, [rebar3_run, rebar3_auto, rebar_mix]}.